{% extends "base.html.twig" %}

{% block stylesheets %}
    <style>
        .contact-image {
            width: 100px;
            height: 100px;
            border-radius: 50%;
        }
    </style>
{% endblock %}

{% block title %}
    All Contacts
{% endblock %}

{% block body %}
<div class="container">
    <div class="card mt-4">
        <div class="card-header">
            All Contacts

            <a href="/create" class="btn btn-success float-right">New Contact</a>
        </div>
        <div class="card-body">
            {% if entries|length <= 0 %}
            <div class="alert alert-warning">
                No entries!<br>
            </div>
            {% else %}
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>#</th>
                    <th></th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Country</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>

                {% for entry in entries %}
                <tr>
                    <td>{{ entry.id }}</td>
                    <td>
                        {% if entry.image %}
                        <img class="contact-image" src="{{ asset('images/contacts/') ~ entry.image}}" alt="{{ entry.firstname }}">
                        {% else %}
                        <img class="contact-image" src="{{ asset('images/avatar.webp') }}" alt="{{ entry.firstname }}">
                        {% endif %}
                    </td>
                    <td>{{ entry.firstname }}</td>
                    <td>{{ entry.lastname }}</td>
                    <td>{{ entry.country }}</td>
                    <td>
                        <a href="/show/{{ entry.id }}">View</a>&nbsp;&nbsp;&nbsp;
                        <a href="/edit/{{ entry.id }}"><i class="fa fa-edit"></i></a>&nbsp;&nbsp;&nbsp;
                        <a href="/delete/{{ entry.id }}"><i class="fa fa-minus-circle"></i></a>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
